
@{
    ViewBag.Title = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    body {
        display: flex;
        min-height: 100vh;
        flex-direction: column;
    }

    main {
        flex: 1 0 auto;
    }

    body {
        background: #fff;
    }

    .input-field input[type=date]:focus + label,
    .input-field input[type=text]:focus + label,
    .input-field input[type=email]:focus + label,
    .input-field input[type=password]:focus + label {
        color: #e91e63;
    }

    .input-field input[type=date]:focus,
    .input-field input[type=text]:focus,
    .input-field input[type=email]:focus,
    .input-field input[type=password]:focus {
        border-bottom: 2px solid #e91e63;
        box-shadow: none;
    }
</style>
<div class="section"></div>
<main>
    @if (ViewBag.msg != null)
    {
        <script>
            alert('@ViewBag.msg');
        </script>
    }
    <center>
        <div class="section"></div>

        <h5 class="indigo-text">Update your password</h5>
        <div class="section"></div>

        <div class="container">
            <div class="z-depth-1 grey lighten-4 row" style="display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE;">

                <form class="col s12" method="post">
                    <div class='row'>
                        <div class='col s12'>
                        </div>
                    </div>

                    <div class='row'>
                        <div class='input-field col s12'>
                            <input class='validate' required type='password' name='oldpassword' id='oldpassword' />
                            <label for='oldpassword'>Enter old password</label>
                        </div>
                    </div>

                    <div class='row'>
                        <div class='input-field col s12'>
                            <input class='validate' required type='password' onkeyup="verify();" name='newpassword' id='newpassword' />
                            <label for='newpassword'>Enter new password</label>
                        </div>
                    </div>

                    <div class='row'>
                        <div class='input-field col s12'>
                            <input class='validate' required type='password' onkeyup="verify();" name='confirmpass' id='confirmpass' />
                            <label for='confirmpass'>Confirm password</label>
                        </div>
                    </div>

                    <br />
                    <center>
                        <div class='row'>
                            <button  type='submit' id="btn_updatePass" name='btn_updatePass' class='col s12 btn btn-large waves-effect indigo'>Update Password</button>
                        </div>
                    </center>
                </form>
            </div>
        </div>
    </center>

    <div class="section"></div>
    <div class="section"></div>
</main>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.1/jquery.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/js/materialize.min.js"></script>
<script>
    document.getElementById('btn_updatePass').disabled = true;
    function verify() {
        if (document.getElementById('newpassword').value !=
            document.getElementById('confirmpass').value) {
        document.getElementById('btn_updatePass').disabled = true;

        } else {
                document.getElementById('btn_updatePass').disabled = false;
        }
    }
</script>