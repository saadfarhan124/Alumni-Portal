
@{
    ViewBag.Title = "EducationalDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
<div class="row">
    <div class="container-fluid">
        <h1 class="center-align">Alumni Form</h1>
        <h4 class="center-align"><strong>Educational Details</strong></h4>
        <br>
        <div class="container-fluid">
            <div class="row">
                <form class="col s12" method="post">
                    @*Input fields using material*@
                    <div class="row">
                        @*Latest qualification*@
                        <div class="input-field col s6">
                            <input id="latest_qualification" type="text" class="validate" name="latest_qualification" required>
                            <label for="latest_qualification">Latest Qualification : </label>
                        </div>
                        @*Degree Title*@
                        <div class="input-field col s6">
                            <input id="degree_title" type="text" class="validate" name="degree_title" required>
                            <label for="degree_title">Degree Title : </label>
                        </div>
                    </div>
                    <div class="row">
                        @*Institute*@
                        <div class="input-field col s6">
                            <input id="institute" type="text" class="validate" name="institute" required>
                            <label for="institute">Institute : </label>
                        </div>
                        @*Year of Completion*@
                        <div class="input-field col s6">
                            <input id="year_of_completion" type="text" class="validate" name="year_of_completion" required>
                            <label for="year_of_completion">Year of Completion :  </label>
                        </div>
                    </div>
                    <div class="row">
                        @*Specialization / Majors *@
                        <div class="input-field col s12">
                            <input id="majors" type="text" class="validate" name="majors" required>
                            <label for="majors">Specialization / Majors : </label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col-lg-12 center-align">
                            <button class="btn waves-effect waves-light " type="submit" name="action">
                                Submit
                                <i class="material-icons right">send</i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
